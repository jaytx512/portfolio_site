---
import '../styles/global.css';

const {
  title = 'Jared Shadduck - Web Apps & Sites',
  description = 'Portfolio of Jared Shadduck: fast, thoughtful web apps and marketing sites for startups and small teams.',
  image = '/images/og-image.jpg',
} = Astro.props;

const siteUrl =
  import.meta.env.PUBLIC_SITE_URL?.replace(/\/+$/, '') ?? 'http://localhost:4321';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const imageUrl = new URL(image, siteUrl).toString();
const plausibleDomain = import.meta.env.PUBLIC_PLAUSIBLE_DOMAIN;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={imageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />
    {plausibleDomain ? (
      <script
        defer
        data-domain={plausibleDomain}
        src="https://plausible.io/js/script.js"
      />
    ) : null}
  </head>
  <body class="text-slate-900">
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:left-6 focus:top-6 focus:z-50 focus:rounded-full focus:bg-white focus:px-4 focus:py-2 focus:text-sm"
    >
      Skip to content
    </a>
    <div class="mx-auto flex min-h-screen w-full flex-col">
      <header class="px-6 pb-6 pt-8 sm:px-12 sticky top-0 z-50 bg-[var(--sand)]/80 backdrop-blur-md transition-all duration-300">
        <div class="mx-auto flex w-full max-w-6xl items-center justify-between">
          <a href="#" class="flex items-center gap-3 group">
            <span class="grid h-10 w-10 place-items-center rounded-full bg-slate-900 text-sm font-bold text-white shadow-lg transition group-hover:bg-[var(--accent)] group-hover:scale-110">
              JS
            </span>
            <div>
              <p class="text-xs font-bold uppercase tracking-widest text-slate-500 transition group-hover:text-[var(--accent)]">Portfolio</p>
              <p class="text-lg font-bold font-serif leading-none text-slate-900">Jared Shadduck</p>
            </div>
          </a>
          <nav class="hidden items-center gap-8 text-sm font-semibold text-slate-600 sm:flex">
            <a href="#work" class="hover:text-[var(--accent)] transition">Work</a>
            <a href="#process" class="hover:text-[var(--accent)] transition">Process</a>
            <a href="#services" class="hover:text-[var(--accent)] transition">Services</a>
            <a href="#about" class="hover:text-[var(--accent)] transition">About</a>
            <a href="#contact" class="hover:text-[var(--accent)] transition">Contact</a>
          </nav>
        </div>
      </header>

      <main id="main" class="flex-1">
        <slot />
      </main>

      <footer class="px-6 pb-10 pt-4 sm:px-12">
        <div class="mx-auto flex w-full max-w-6xl flex-col gap-4 border-t border-black/10 pt-6 text-sm text-slate-500 sm:flex-row sm:items-center sm:justify-between">
          <p>Copyright {new Date().getFullYear()} Jared Shadduck. All rights reserved.</p>
          <p>Built with Astro + Tailwind.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
