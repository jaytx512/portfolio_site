---
import BaseLayout from '../layouts/BaseLayout.astro';
import { site } from '../data/site';
import { projects } from '../data/projects';
---


<BaseLayout
  title="Jared Shadduck - Web Apps & Sites"
  description="Product-focused web development for startups and service businesses. Fast, clear UX and measurable outcomes."
>
  <script type="application/ld+json">
    {JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Person',
      name: site.name,
      jobTitle: site.role,
      url: import.meta.env.PUBLIC_SITE_URL ?? 'http://localhost:4321',
      sameAs: [site.links.github, site.links.linkedin, site.links.upwork],
    })}
  </script>
  <section class="px-6 pb-20 pt-8 sm:px-12">
    <div class="mx-auto grid w-full max-w-6xl gap-12 lg:grid-cols-[1.2fr_0.8fr]">
      <div class="flex flex-col justify-center gap-8">
        <div>
          <span class="inline-flex items-center rounded-full border border-emerald-500/20 bg-emerald-50 px-3 py-1 text-xs font-bold uppercase tracking-widest text-emerald-800">
            <span class="mr-2 h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
            Available Now
          </span>
        </div>
        <h1 class="text-5xl font-semibold leading-[1.1] sm:text-6xl lg:text-7xl">
          {site.tagline}
        </h1>
        <p class="max-w-xl text-xl leading-relaxed text-slate-700">{site.summary}</p>
        <div class="flex flex-wrap gap-4 pt-2">
          <a
            href={`mailto:${site.email}`}
            class="rounded-full bg-slate-900 px-8 py-4 text-base font-bold !text-white shadow-xl shadow-slate-900/20 transition hover:-translate-y-1 hover:bg-slate-800 focus:ring-4 focus:ring-slate-300"
          >
            Start a project
          </a>
          <a
            href="#work"
            class="rounded-full border border-slate-200 bg-white px-8 py-4 text-base font-bold text-slate-900 transition hover:border-slate-300 hover:shadow-lg hover:shadow-slate-900/5 hover:-translate-y-1"
          >
            View recent work
          </a>
        </div>
        <div class="flex flex-wrap gap-3 pt-4">
          {site.highlights.map((item) => (
            <span class="tag">{item}</span>
          ))}
        </div>
      </div>
      
      <div class="surface grid grid-cols-2 gap-6 p-6 sm:p-8 self-start lg:mt-12">
        <div class="col-span-2 flex flex-col gap-3 pb-4 border-b border-black/5">
          <p class="text-xs font-bold uppercase tracking-widest text-slate-500">Profile</p>
          <h2 class="text-3xl">{site.name}</h2>
          <p class="text-base text-slate-700">{site.role} / {site.location}</p>
        </div>
        <div class="rounded-xl bg-slate-50 p-4">
          <p class="text-xs font-bold uppercase tracking-widest text-slate-500">Focus</p>
          <p class="mt-2 text-sm font-semibold text-slate-800">Apps, marketing sites, user experience</p>
        </div>
        <div class="rounded-xl bg-slate-50 p-4">
          <p class="text-xs font-bold uppercase tracking-widest text-slate-500">Status</p>
          <p class="mt-2 text-sm font-semibold text-slate-800">{site.availability}</p>
        </div>
        <div class="col-span-2 grid-dots rounded-xl border border-black/5 p-5">
          <p class="text-xs font-bold uppercase tracking-widest text-slate-500">Connect</p>
          <div class="mt-4 flex flex-wrap gap-4 text-sm font-semibold text-slate-700">
            <a href={site.links.github} class="flex items-center gap-2 transition hover:text-[var(--accent)]">
              GitHub (link)
            </a>
            <a href={site.links.linkedin} class="flex items-center gap-2 transition hover:text-[var(--accent)]">
              LinkedIn (link)
            </a>
            <a href={site.links.upwork} class="flex items-center gap-2 transition hover:text-[var(--accent)]">
              Upwork (link)
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="work" class="px-6 pb-24 sm:px-12">
    <div class="mx-auto w-full max-w-6xl">
      <div class="mb-12 flex flex-col gap-4">
        <p class="text-xs font-bold uppercase tracking-widest text-[var(--accent)]">Selected Work</p>
        <h2 class="text-4xl">Recent projects & results</h2>
        <p class="max-w-2xl text-lg text-slate-600">A few snapshots of recent collaborations. I focus on results-driven development that solves actual business problems.</p>
      </div>
      <div class="grid gap-8 lg:grid-cols-3">
        {projects.map((project) => (
          <article class="surface flex h-full flex-col gap-6 p-8">
            <div>
              <p class="text-xs font-bold uppercase tracking-widest text-slate-500">{project.type}</p>
              <h3 class="mt-3 text-2xl font-serif text-slate-900">{project.name}</h3>
            </div>
            <p class="text-base leading-relaxed text-slate-600">{project.summary}</p>
            <ul class="flex-1 space-y-3">
              {project.outcomes.map((outcome) => (
                <li class="flex items-start gap-3 text-sm text-slate-700">
                  <svg class="mt-0.5 h-5 w-5 shrink-0 text-emerald-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>{outcome}</span>
                </li>
              ))}
            </ul>
            <div class="flex flex-wrap gap-2 pt-4 border-t border-black/5">
              {project.stack.map((item) => (
                <span class="tag bg-white">{item}</span>
              ))}
            </div>
            <a
              href={`/work/${project.slug}`}
              class="inline-flex items-center gap-2 text-sm font-bold text-[var(--accent-dark)] transition hover:gap-3 hover:text-[var(--accent)]"
            >
              View case study
              <span aria-hidden="true">&rarr;</span>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section id="process" class="px-6 pb-24 sm:px-12 bg-white/40">
    <div class="mx-auto w-full max-w-6xl py-12">
      <div class="mb-12 flex flex-col gap-4">
        <p class="text-xs font-bold uppercase tracking-widest text-[var(--accent)]">Process</p>
        <h2 class="text-4xl">A structured path to shipping</h2>
        <p class="max-w-2xl text-lg text-slate-600">No black boxes. Clear milestones keep projects on time and under control, whether it's a week-long sprint or a multi-month build.</p>
      </div>
      <div class="grid gap-8 lg:grid-cols-3">
        {[
          {
            step: '01',
            title: 'Discover',
            detail: 'We align on goals, scope, and success metrics. I audit existing systems and gather all content and constraints before writing a single line of code.',
          },
          {
            step: '02',
            title: 'Build',
            detail: 'I set up design systems for consistency, then move to rapid iteration. You get regular previews via staging links so there are never big surprises.',
          },
          {
            step: '03',
            title: 'Launch',
            detail: 'Final polish, performance tuning, and cross-browser QA. I handle the handoff with documentation and analytics setup so you can take over confidently.',
          },
        ].map((step) => (
          <div class="relative flex flex-col gap-4 rounded-2xl border border-black/5 bg-white p-8 shadow-sm transition hover:shadow-md">
            <span class="text-6xl font-serif font-bold text-slate-200 absolute top-4 right-6 select-none pointer-events-none">{step.step}</span>
            <h3 class="text-2xl font-serif z-10">{step.title}</h3>
            <p class="text-base leading-relaxed text-slate-700 z-10">{step.detail}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div class="line-divider px-6 sm:px-12">
    <svg viewBox="0 0 1152 60" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M16 30C240 48 420 52 620 34C820 16 990 10 1136 30" stroke="rgba(15,17,21,0.35)" stroke-width="1.5" />
    </svg>
  </div>

  <section id="services" class="px-6 pb-24 sm:px-12">
    <div class="mx-auto w-full max-w-6xl">
      <div class="mb-12 flex flex-col gap-4">
        <p class="text-xs font-bold uppercase tracking-widest text-[var(--accent)]">Services</p>
        <h2 class="text-4xl">What I can build for you</h2>
        <p class="max-w-2xl text-lg text-slate-600">
          Clear scope, focused sprints, and builds that are easy to maintain after handoff.
        </p>
      </div>
      <div class="grid gap-8 lg:grid-cols-3">
        {[
          {
            title: 'Marketing Sites',
            detail:
              'Conversion-focused landing pages, multi-page sites, and content systems that support SEO and growth.',
          },
          {
            title: 'Web Apps',
            detail:
              'Dashboards, portals, and internal tools with clean UX and dependable front-end architecture.',
          },
          {
            title: 'Optimization & Retainers',
            detail:
              'Performance tuning, CRO experiments, and ongoing improvements once your core build is live.',
          },
        ].map((item) => (
          <div class="surface flex flex-col gap-4 p-8">
            <h3 class="text-2xl font-serif">{item.title}</h3>
            <p class="text-base text-slate-700">{item.detail}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section id="about" class="px-6 pb-24 sm:px-12">
    <div class="mx-auto grid w-full max-w-6xl gap-8 lg:grid-cols-[0.6fr_0.4fr]">
      <div class="surface p-8 sm:p-10">
        <p class="text-xs font-bold uppercase tracking-widest text-[var(--accent)]">About</p>
        <h2 class="mt-4 text-3xl font-serif text-slate-900">Operator mindset, design instincts</h2>
        <p class="mt-6 text-lg leading-relaxed text-slate-600">
          I partner with founders, agencies, and product teams to build interfaces that feel premium and stay
          maintainable. I care about the details: performance budgets, readable codebases, and making sure every
          interaction earns its place.
        </p>
      </div>
      <div class="surface flex flex-col gap-6 p-8 sm:p-10">
        <p class="text-xs font-bold uppercase tracking-widest text-slate-500">Expertise</p>
        <ul class="space-y-4 text-base text-slate-700">
          {[
            'Product discovery & UX direction',
            'Responsive UI systems',
            'Frontend architecture',
            'Performance & accessibility',
            'CMS integrations'
          ].map((item) => (
            <li class="flex items-center gap-3">
              <span class="h-1.5 w-1.5 rounded-full bg-[var(--accent)]"></span>
              {item}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <section id="testimonials" class="px-6 pb-24 sm:px-12">
    <div class="mx-auto w-full max-w-6xl">
      <div class="mb-12 flex flex-col gap-4">
        <p class="text-xs font-bold uppercase tracking-widest text-[var(--accent)]">Testimonials</p>
        <h2 class="text-4xl">What partners say</h2>
        <p class="max-w-2xl text-lg text-slate-600">
          Short notes from teams who needed speed, clarity, and a smooth handoff.
        </p>
      </div>
      <div class="grid gap-8 lg:grid-cols-3">
        {[
          {
            name: 'Maya Collins',
            role: 'Founder, Lumen Studio',
            quote:
              'Jared delivered a site that looks premium and performs even better. Clear communication, clean execution.',
          },
          {
            name: 'Carlos Nguyen',
            role: 'Ops Director, FieldOps',
            quote:
              'We cut scheduling time in half within weeks. Jared brought structure and kept the build on rails.',
          },
          {
            name: 'Priya Shah',
            role: 'Product Lead, Northwind',
            quote:
              'He translated messy requirements into a polished dashboard that executives actually use.',
          },
        ].map((item) => (
          <figure class="surface flex h-full flex-col gap-6 p-8">
            <blockquote class="text-base leading-relaxed text-slate-700">"{item.quote}"</blockquote>
            <figcaption class="mt-auto text-sm font-semibold text-slate-900">
              {item.name}
              <span class="block text-xs font-medium text-slate-500">{item.role}</span>
            </figcaption>
          </figure>
        ))}
      </div>
    </div>
  </section>

  <section id="contact" class="px-6 pb-32 sm:px-12">
    <div class="mx-auto w-full max-w-6xl">
      <div class="relative overflow-hidden rounded-[20px] border border-white/10 bg-slate-900 p-8 sm:p-16 text-white isolate shadow-2xl">
        <!-- Decoration -->
        <div class="absolute -right-20 -top-20 h-64 w-64 rounded-full bg-[var(--accent)]/20 blur-3xl -z-10"></div>
        <div class="absolute bottom-0 right-0 h-40 w-40 rounded-full bg-white/5 blur-2xl -z-10"></div>

        <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
          <div>
            <p class="text-xs font-bold uppercase tracking-widest text-[var(--accent)]">Let's work together</p>
            <h2 class="mt-4 text-4xl font-serif leading-tight">Have a project in mind?</h2>
            <p class="mt-6 text-lg text-slate-300 leading-relaxed max-w-md">
              Share a quick overview and I'll respond with next steps, a timeline, and a preliminary proposal.
            </p>
          </div>
          <div class="flex flex-col gap-6 rounded-2xl border border-white/10 bg-white/5 p-8 backdrop-blur-sm">
            <p class="text-xs font-bold uppercase tracking-widest text-slate-300">Contact</p>
            <a
              href={`mailto:${site.email}`}
              class="text-3xl font-semibold tracking-tight text-white transition hover:text-[var(--accent)] break-all"
            >
              {site.email}
            </a>
            <p class="text-sm text-slate-300 flex items-center gap-2">
              <span class="inline-block h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
              Typically replies within 1-2 business days.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
